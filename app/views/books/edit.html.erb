<h1>Editing Book</h1>

<% if @book.errors.any? %>
<%= @book.errors.count %> errors prohibited this book from being saved:
<% @book.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>
<% end %>


<%= form_with model:@book, local:true do |f| %>
<table>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div>
        <%= f.submit 'Update Book' %>
    </div>
    <% end %>
</table>

<table>
<td><%= link_to "Show", book_path %></td>
<td>|</td>
<td><%= link_to "Back", books_path %></td>
</table>